<Window x:Class="modBusCoverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:modBusCoverter"
        mc:Ignorable="d"
        Title="Calculadora de Endereços Modbus Haiwell" Height="350" Width="450" Loaded="Window_Loaded">
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="PLC para Modbus">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Tipo de Memória:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="MemoryTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5" SelectedIndex="0"/>

                    <Label Content="Endereço:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="AddressTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <Button Content="Calcular" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Click="CalculateButton_Click"/>

                    <Label Content="Resultado:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ResultTextBox" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Modbus para PLC">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Endereço Modbus (ex: 4x 912):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ModbusAddressTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <Button Content="Converter" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Click="ConvertModbusToPLCButton_Click"/>

                    <Label Content="Resultado PLC:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ResultPLCAddressTextBox" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
